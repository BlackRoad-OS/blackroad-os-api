# =============================================================================
# BlackRoad OS API Configuration
# =============================================================================

# Core Service URLs
OS_ROOT=https://blackroad.systems
SERVICE_BASE_URL=https://api.blackroad.systems
CORE_BASE_URL=https://core.blackroad.systems
OPERATOR_BASE_URL=https://operator.blackroad.systems

# Server Configuration
LOG_LEVEL=info
PORT=8080
ENVIRONMENT=production

# Version info for /version endpoint (optional - will use package.json or defaults)
# BR_OS_API_VERSION=0.2.0
# BR_OS_API_COMMIT=abc123
# BR_OS_ENV=local

# =============================================================================
# Deployment Platform Tokens
# =============================================================================

# Railway
# RAILWAY_TOKEN=your-railway-token
# RAILWAY_PROJECT_ID=your-project-id

# Cloudflare
# CLOUDFLARE_API_TOKEN=your-cloudflare-token
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# Vercel
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-org-id

# DigitalOcean
# DIGITALOCEAN_SSH_KEY=your-ssh-private-key
# DIGITALOCEAN_DROPLET_IP=159.65.43.12

# Raspberry Pi Fleet
# PI_SSH_KEY=your-pi-ssh-key
# PI_LUCIDIA_IP=192.168.4.38
# PI_BLACKROAD_IP=192.168.4.64
# PI_DISCOVERY_IP=192.168.4.49

# =============================================================================
# Project Management Integrations
# =============================================================================

# Notion (Deployment Logging)
# NOTION_TOKEN=secret_your-notion-token
# NOTION_DATABASE_ID=your-database-id

# Asana (Task Management)
# ASANA_TOKEN=your-asana-token
# ASANA_PROJECT_ID=your-project-id

# =============================================================================
# Authentication & Payments
# =============================================================================

# Clerk Authentication
# CLERK_SECRET_KEY=sk_test_your-clerk-secret
# CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable
# CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Payments
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable
# STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook

# =============================================================================
# AI/ML Model Integrations
# =============================================================================

# Hugging Face
# HUGGINGFACE_API_KEY=hf_your-api-key
# HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co

# Open Source LLM Backend
# LLM_API_KEY=your-llm-api-key
# LLM_BACKEND=huggingface  # Options: huggingface, ollama, vllm, tgi, llamacpp
# LLM_BASE_URL=http://localhost:8000
# LLM_ENFORCE_SAFETY=true

# =============================================================================
# Tunnel Configuration
# =============================================================================

# Default Tunnel Provider (cloudflare, ngrok, localtunnel)
# TUNNEL_DEFAULT_PROVIDER=cloudflare

# ngrok
# NGROK_AUTH_TOKEN=your-ngrok-token

# =============================================================================
# Mobile Development Integration
# =============================================================================

# API configuration for mobile clients
# MOBILE_API_CACHE_TTL=300
# MOBILE_SYNC_WIFI_ONLY=false

# =============================================================================
# Security
# =============================================================================

# API Keys (comma-separated for multiple keys)
# API_KEYS=key1,key2,key3
# PUBLIC_API_KEY=your-public-key

# Request Limits
# REQUEST_TIMEOUT_MS=30000
# RATE_LIMIT_PER_MINUTE=60
